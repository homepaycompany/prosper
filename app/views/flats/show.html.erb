<div class="section">
  <div class="container">
    <div class="flat-title text-center">
      <h1><%= "#{@flat.title} - #{@flat.price}€" %></h1>
      <% if @flat.in_wishlist? %>
        <i class="fa fa-heart" aria-hidden="true"></i>
      <% else %>
       <i class="fa fa-heart-o" aria-hidden="true"></i>
      <% end %>
      <%= link_to "Voir l'annonce", @flat.url, class: "btn" %>
    </div>

    <div class="row">
      <div class="col-xs-12 col-sm-6 flat-image">
        <%= image_tag @flat.photo %>
      </div>
      <div class="col-xs-12 col-sm-6">
        <div class="flat-card">
          <div class="col-xs-12">
            <h2><%= @flat.title %></h2>
          </div>
          <div class="col-xs-4">
            <p><strong>Prix :</strong> <%= @flat.price %>€</p>
          </div>
          <div class="col-xs-4">
            <p><strong>Surface :</strong> <%= @flat.size %>m²</p>
          </div>
          <div class="col-xs-4">
            <p><strong>Terrain :</strong> <%= @flat.land_size %>m²</p>
          </div>
          <div class="col-xs-12">
            <p><strong>Description</strong></p>
            <p><%= @flat.description %></p>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-sm-6">
        <div class="flat-card">
          <p>TBC</p>

        </div>
      </div>
      <div class="col-xs-12 col-sm-6">
        <div class="flat-card">
          <p>TBC</p>

        </div>
      </div>
    </div>
  </div>
</div>
