<div class="section">
  <div class="container">
    <div class="flat-title text-center">
      <h1><%= "#{@flat.title} - #{number_with_delimiter(@flat.total_price, :delimiter => ' ')}€" %></h1>
      <% if @flat.in_wishlist? %>
        <i class="fa fa-heart" aria-hidden="true"></i>
      <% else %>
       <i class="fa fa-heart-o" aria-hidden="true"></i>
      <% end %>
      <%= link_to "Voir l'annonce", @flat.url, class: "btn", target: :_blank %>
    </div>

    <div class="row">
      <div class="col-xs-12 col-sm-6">
        <div class="flat-card flat-card-image">
          <%= image_tag @flat.photo %>
        </div>
      </div>

      <div class="col-xs-12 col-sm-6">
        <div class="flat-card">
          <div class="col-xs-12">
            <h2 class="text-center">Annonce</h2>
          </div>
          <div class="col-xs-4">
            <p>
              <strong>Prix :</strong>
              <% if @flat.price && (@flat.price > 0) %>
                <%= number_with_delimiter(@flat.price, :delimiter => ' ') %>€/m²
              <% else %>
                n/a
              <% end %>
            </p>
          </div>
          <div class="col-xs-4">
            <p>
              <strong>Surface :</strong>
              <% if @flat.size && (@flat.size > 0) %>
                <%= number_with_delimiter(@flat.size, :delimiter => ' ') %>m²
              <% else %>
                n/a
              <% end %>
            </p>
          </div>
          <div class="col-xs-4">
            <p>
              <strong>Terrain :</strong>
              <% if @flat.land_size && (@flat.land_size > 0) %>
                <%= number_with_delimiter(@flat.land_size, :delimiter => ' ') %>m²
              <% else %>
                n/a
              <% end %>
            </p>
          </div>
          <div class="col-xs-12">
            <p><strong>Description</strong></p>
            <p class="flat-description"><%= @flat.description %></p>
          </div>
        </div>
      </div>

      <div class="col-xs-12 col-sm-6">
        <div class="flat-card">
          <h2 class="text-center">Historique du prix</h2>
          <% @price_history = { "01/01/2017": 280, "02/01/2017": 290 } %>
          <%#= line_chart @price_history %>
        </div>
      </div>

      <div class="col-xs-12 col-sm-6">
        <div class="flat-card">
          <h2 class="text-center">Détail de l'investissement</h2>
          <h3>Hypothèses</h3>
          <div class="col-xs-6">
            <p>Prix</p>
            <p><%= @flat.price %></p>
            <!-- <input id="ex-1" data-slider-id='ex1Slider' type="text" data-slider-min="0" data-slider-max="20" data-slider-step="1" data-slider-value="14"/> -->
          </div>
          <div class="col-xs-6">
            <p>Apport personnel</p>
            <p><%= @flat.price %></p>
          </div>
          <div class="col-xs-6">
            <p>Taux d'intérêt<p>
            <p>2.5%</p>
          </div>
          <div class="col-xs-6">
            <p>Durée emprunt</p>
            <p>12 mois</p>
          </div>
          <div class="col-xs-6">
            <p>Rénovation</p>
            <p>300 €/m²</p>
          </div>
          <div class="col-xs-6">
            <p>Prix de revente</p>
            <p><%= @flat.average_price %></p>
          </div>
          <h3>Détail de l'investissement</h3>

        </div>
      </div>
    </div>
  </div>
</div>
