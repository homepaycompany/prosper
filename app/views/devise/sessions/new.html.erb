<div class="section">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <div class="form-devise">
        <h2>Se connecter</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <div class="form-input">
              <%= f.input :email, placeholder:"jean.dujardin@gmail.com", required: false, autofocus: true %>
              <i class="fa fa-envelope-o" aria-hidden="true"></i>
            </div>
            <div class="form-input">
              <%= f.input :password, label: "Mot de passe",  placeholder:"********", required: false %>
              <i class="fa fa-lock" aria-hidden="true"></i>
            </div>
            <div class="form-input">
              <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
            </div>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Se connecter", class:"btn homego-button" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
