<div class="navbar">

  <!-- Left navigation -->
  <div class="navbar-left navbar-logo hidden-xs hidden-sm">
    <%= link_to root_path, class: "navbar-brand" do %>
      BUILD
    <% end %>
  </div>

  <!-- Right Navigation -->
  <div class="navbar-right hidden-xs hidden-sm">
    <%= link_to "A propos", about_path, class: "navbar-item navbar-link #{active_class(about_path)}" %>
    <%= link_to "Nous rejoindre", access_path, class: "navbar-item navbar-link #{active_class(access_path)}" %>
    <%= link_to "Se connecter", new_user_session_path, class: "btn" %>
