<div class="navbar">

  <!-- Left navigation -->
  <div class="navbar-left navbar-logo hidden-xs hidden-sm">
    <% if current_user %>
      <%= link_to flats_path, class: "navbar-brand" do %>
      BUILD
      <% end %>
    <% else %>
      <%= link_to root_path, class: "navbar-brand" do %>
      BUILD
      <% end %>
    <% end %>
  </div>

  <!-- Right Navigation -->
  <div class="navbar-right hidden-xs hidden-sm">
    <% if current_user %>
      <%= link_to "Annonces", flats_path, class: "navbar-item navbar-link #{active_class(flats_path)}" %>
      <%= link_to "Mes favoris", wishlist_path, class: "navbar-item navbar-link #{active_class(wishlist_path)}" %>
      <%= link_to "Mon profil", edit_user_registration_path, class: "navbar-item navbar-link #{active_class(edit_user_registration_path)}" %>
      <%= link_to "Se déconnecter", destroy_user_session_path, method: "delete", class: "navbar-item navbar-link #{active_class(destroy_user_session_path)}" %>
    <% else %>
      <%= link_to "A propos", about_path, class: "navbar-item navbar-link #{active_class(about_path)}" %>
      <%= link_to "S'inscrire", access_path, class: "navbar-item navbar-link #{active_class(access_path)}" %>
      <%= link_to "Se connecter", new_user_session_path, class: "btn" %>
    <% end %>
  </div>

  <!-- Dropdown appearing on mobile only -->
  <div class="navbar-item navbar-small-logo hidden-md hidden-lg">
    <%= image_tag "logo.png" %>
  </div>
  <div class="navbar-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-dropdown-menu">
        <% if current_user %>
          <li>
            <%= link_to "Annonces", flats_path, class: "navbar-item navbar-link #{active_class(flats_path)}" %>
          </li>
          <li>
            <%= link_to "Mes favoris", wishlist_path, class: "navbar-item navbar-link #{active_class(wishlist_path)}" %>
          </li>
          <li>
            <%= link_to "Mon profil", edit_user_registration_path, class: "navbar-item navbar-link #{active_class(edit_user_registration_path)}" %>
          </li>
          <li>
            <%= link_to "Se déconnecter", destroy_user_session_path, method: "delete", class: "navbar-item navbar-link #{active_class(destroy_user_session_path)}" %>
          </li>
        <% else %>
          <li>
            <%= link_to "A propos", about_path, class: "navbar-item navbar-link #{active_class(about_path)}" %>
          </li>
          <li>
            <%= link_to "Nous rejoindre", access_path, class: "navbar-item navbar-link #{active_class(access_path)}" %>
          </li>
          <li>
            <%= link_to "Se connecter", new_user_session_path, class: "navbar-item navbar-link #{active_class(new_user_session_path)}" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
